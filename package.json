{
  "name": "elysia-boilerplate",
  "version": "0.3.0",
  "description": "A modern, production-ready boilerplate for building APIs with Elysia, Bun runtime, and PostgreSQL.",
  "author": "Truehazker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/truehazker/elysia-boilerplate"
  },
  "homepage": "https://github.com/truehazker/elysia-boilerplate",
  "bugs": "https://github.com/truehazker/elysia-boilerplate/issues",
  "scripts": {
    "start": "bun run src/main.ts",
    "dev": "bun run --watch src/main.ts",
    "build": "bun build --compile --minify-whitespace --minify-syntax --outfile build/server src/main.ts",
    "db:generate": "bun run --bun drizzle-kit generate",
    "db:migrate": "bun run --bun drizzle-kit migrate",
    "db:studio": "bun run --bun drizzle-kit studio",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format --write ."
  },
  "main": "src/main.ts",
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "drizzle-orm": "^0.44.7",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.4.16",
    "envalid": "^8.1.1",
    "pg": "^8.16.3",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@types/bun": "^1.3.3",
    "drizzle-kit": "^0.31.7",
    "pino-pretty": "^13.1.2"
  }
}
